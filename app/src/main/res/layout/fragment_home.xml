<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/fab_margin"
    android:layout_marginRight="@dimen/fab_margin">
  <!--Dashboard title-->
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/greeting"
      android:textStyle="bold"
      android:textColor="@color/myColorPrimaryDark"
      android:textSize="@dimen/titleSize"
      android:layout_marginTop="@dimen/marginTopGreeting">
  </TextView>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="@dimen/fab_55"
      android:background="@drawable/background">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/menu_home"
      android:gravity="start"
      android:textStyle="bold"
      android:textSize="@dimen/titleSize"
      android:textAlignment="center"
      android:textColor="@android:color/white">
  </TextView>

  <!--Stats titles-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/venituri"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="@android:color/white">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cheltuieli"
        android:textAlignment="center"
        android:layout_weight="1"
        android:textColor="@android:color/white">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/balanta"
        android:textAlignment="center"
        android:layout_weight="1"
        android:textColor="@android:color/white">
    </TextView>
  </LinearLayout>

  <!--separator-->
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@android:color/darker_gray"/>

  <!--Stats values-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/venitVal"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="@android:color/white">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cheltuieliVal"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="@android:color/white">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/balantaVal"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="@android:color/white">
    </TextView>
  </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@drawable/background"
      android:layout_marginTop="@dimen/fab_55">
  <!--Dashboard title-->
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/istoricTranzactiiTitle"
      android:gravity="start"
      android:textStyle="bold"
      android:textSize="@dimen/titleSize"
      android:textColor="@android:color/white"
      android:textAlignment="center">
  </TextView>

  <!--list w/ transactions-->
  <ListView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/listViewTranzactii">
  </ListView>
  </LinearLayout>
</LinearLayout>